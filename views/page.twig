{% extends 'base.twig' %}

{% block title %}{{ page.title }} - {{ app.name }}{% endblock %}

{% block content %}
<div class="container">
	<div>
		<h1 class="text-center">{{ page.title }}</h1>
		<p class="lead">
			{% if page.content|trim is not empty %}
				{{ page.content|raw }}
			{% endif %}
		</p>
	</div>
</div>
{% endblock %}
