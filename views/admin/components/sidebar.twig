<aside class="main-sidebar">
	<section class="sidebar">
		<div class="user-panel">
			<div class="pull-left image">
				<img src="/assets/adminLTE/v2/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
			</div>
			<div class="pull-left info">
				<p>{{ user.full_name }}</p>
				<a href="#"><i class="fa fa-circle text-success"></i> Online</a>
			</div>
		</div>
		<ul class="sidebar-menu" data-widget="tree">
			<li class="header">MAIN MENU</li>
			<li class="{{ active_menu == 'home' ? 'active' : '' }}"><a href="/admin"><i class="fa fa-dashboard"></i> <span>Halaman Utama</span></a></li>
			<li class="{{ active_menu == 'live_chat' ? 'active' : '' }}"><a href="/admin/live_chat"><i class="fa fa-comments"></i> <span>Live Chat</span></a></li>
			<li class="treeview {{ active_menu == 'chat_bot'?'active':'' }}">
				<a href="#">
					<i class="fa fa-cubes"></i> <span>Chat Bot</span>
					<span class="pull-right-container">
						<i class="fa fa-angle-left pull-right"></i>
					</span>
				</a>
				<ul class="treeview-menu">
					<li><a href="/admin"><i class="fa fa-circle-o"></i> Kalimat</a></li>
					<li><a href="/admin"><i class="fa fa-circle-o"></i> Kata Kunci</a></li>
					<li><a href="/admin"><i class="fa fa-circle-o"></i> Pengaturan</a></li>
				</ul>
			</li>
			<li class="treeview">
				<a href="#">
					<i class="fa fa-file-o"></i> <span>Data Pelayanan</span>
					<span class="pull-right-container">
						<i class="fa fa-angle-left pull-right"></i>
					</span>
				</a>
				<ul class="treeview-menu">
					<li><a href="/admin"><i class="fa fa-circle-o"></i> Pengurusan Dokumen</a></li>
					<li><a href="/admin"><i class="fa fa-circle-o"></i> Pengurusan Izin</a></li>
				</ul>
			</li>
			<li class="treeview {{ active_menu == 'page'?'active':'' }}">
				<a href="/">
					<i class="fa fa-file"></i> <span>Halaman</span>
					<span class="pull-right-container">
						<i class="fa fa-angle-left pull-right"></i>
					</span>
				</a>
				<ul class="treeview-menu">
					<li class="{{ mode == 'list'?'active':''}}"><a href="/admin/page"><i class="fa fa-circle-o"></i> Daftar Halaman</a></li>
					{% for page in pages %}
						<li class="{{ data_id == page.id?'active':'' }}"><a href="/admin/page/view/{{ page.id }}"><i class="fa fa-circle-o"></i> {{ page.title }}</a></li>
					{% endfor %}
				</ul>
			</li>
		</ul>
	</section>
</aside>
